{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Flask App",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "backend/app.py",
        "FLASK_ENV": "development",
        "FLASK_RUN_FROM_CLI": "false"
      },
      "args": ["run"],
      "cwd": "${workspaceFolder}/backend",
      "jinja": true
    }
  ]
}
